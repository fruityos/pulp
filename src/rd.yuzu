; ram disk

sub rd_getDataBlockSize()
	return 1 << 10
end

sub rd_init(ramDisk)
	local root
	root = heap_alloc(inode_getSize())
	inode_init(root, "/", 0, 0, 0)
	rd_setRoot(ramDisk, root)
end

sub rd_getRoot(ramDisk)
	return [ramDisk + (1 << 3)]
end

sub rd_setRoot(ramDisk, rootNode)
	[ramDisk + (1 << 3)] = rootNode
end
