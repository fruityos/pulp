sub kmain(initJarPtr)
	local rdAddr, rdSize, blockSize

	heap_init()
	global_init()

	kcls()
	kprintln("Welcome to FruityOS!")

	kprintln("Unpacking initial jar...")
	kunpack(initJarPtr)

	heap_printStats()

	kprintln("Press any key to continue...")
	while sys_getch() == -1 do end

	kcls()
	kprintln("Ready!")

	return 0
end
